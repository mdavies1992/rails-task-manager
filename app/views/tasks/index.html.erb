<div class="container mt-3 d-flex flex-column justify-content-center text-center w-25">
  <h1>My Tasks</h1>
  <div>
  <ul>
    <% @tasks.each do |task| %>
      <% if task.completed  %>
        <li><i class="fa-regular fa-square-check"></i> <%= link_to "#{task.title}", task_path(task) %></li>
      <% else %>
        <li><i class="fa-regular fa-square"></i> <%= link_to "#{task.title}", task_path(task) %></li>
      <% end %>
    <% end %>
  </ul>
  </div>
  <%= link_to "Create a New Task", new_task_path, {:class => "btn btn-primary"}   %>
</div>
